<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping>
    <class name="com.MaterialInfo" table="material_info">
        <id name="id" type="java.lang.String">
            <column name="id" length="40" />
            <generator class="assigned" />
        </id>
        <property name="materialClass" type="java.lang.String">
            <column name="material_class" length="80"/>
        </property>
       	<property name="materialGroup" type="java.lang.String">
            <column name="material_group" length="80"/>
        </property>
       	<property name="materialDetail" type="java.lang.String">
            <column name="material_detail" length="80" />
        </property>
       	<property name="otherName" type="java.lang.String">
            <column name="other_name" length="80" />
        </property>
       	<property name="materialCode" type="java.lang.String">
            <column name="material_code" length="80" />
        </property>
        <property name="materialType" type="java.lang.String">
            <column name="material_type" length="80" />
        </property>
       	<property name="unity" type="java.lang.String">
            <column name="unity" length="20"/>
        </property>
       	<property name="unitPrice" type="java.lang.Double">
            <column name="unit_price"/>
        </property>
        <property name="remark" type="java.lang.String">
            <column name="remark" length="300">
            </column>	            
        </property>
        <property name="createDate" type="java.sql.Date">
            <column name="create_date" length="19" />
        </property>
        <property name="createUser" type="java.lang.String">
            <column name="create_user" length="40" />
        </property>
        <property name="modifyDate" type="java.sql.Date">
            <column name="modify_date" length="19" />
        </property>
        <property name="modifyUser" type="java.lang.String">
            <column name="modify_user" length="40" />
        </property>
        <property name="isValid" type="java.lang.String">
            <column name="is_valid" length="4">
            	<comment>0有效 1无效</comment>
            </column>	            
        </property>
        <property name="isFormal" type="java.lang.String">
            <column name="is_formal" length="1">
            </column>	            
        </property>
    </class>
</hibernate-mapping>
